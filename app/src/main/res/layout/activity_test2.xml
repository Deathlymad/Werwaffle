<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_test2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.philip.werwaffle.activity.test2">

    <Button
        android:text="connect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/test2_bt_connect" />

    <Button
        android:text="disconnect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/test2_bt_connect"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp"
        android:id="@+id/test2_bt_discon" />

    <Button
        android:text="send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="39dp"
        android:id="@+id/test2_bt_send"
        android:layout_below="@+id/test2_bt_discon"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="username"
        android:ems="10"
        android:layout_above="@+id/test2_bt_discon"
        android:layout_toRightOf="@+id/test2_bt_discon"
        android:layout_toEndOf="@+id/test2_bt_discon"
        android:id="@+id/test2_username" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="adress"
        android:ems="10"
        android:layout_alignTop="@+id/test2_bt_discon"
        android:layout_toRightOf="@+id/test2_bt_discon"
        android:layout_toEndOf="@+id/test2_bt_discon"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:id="@+id/test2_adress" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="say"
        android:ems="10"
        android:layout_alignTop="@+id/test2_bt_send"
        android:layout_alignRight="@+id/test2_adress"
        android:layout_alignEnd="@+id/test2_adress"
        android:id="@+id/test2_textsay" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/test2_username"
        android:layout_alignEnd="@+id/test2_username"
        android:layout_marginRight="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="33dp"
        android:id="@+id/test2_port" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/test2_message" />
</RelativeLayout>
