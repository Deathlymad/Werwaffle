<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="1">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:id="@+id/ne_card_cv">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@android:drawable/ic_menu_help"
                android:id="@+id/one_card_img_bt"
                android:layout_marginRight="17dp"
                android:layout_marginEnd="17dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <LinearLayout
                android:orientation="vertical"
                android:background="@color/black_overlay"
                android:layout_width="match_parent"
                android:layout_height="1sp"></LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:background="@color/black_overlay"
                android:layout_height="1sp"
                android:layout_below="@+id/one_card_img_bt"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"></LinearLayout>

            <CheckBox
                android:id="@+id/checkBox1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text=""
                android:elevation="1dp"
                style="@android:style/Widget.Material.Light.CompoundButton.CheckBox"
                android:layout_alignTop="@+id/one_card_img_bt"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="13dp"
                android:layout_marginStart="13dp" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:text="TextView"
                android:textSize="18sp"
                android:layout_height="28dp"
                android:layout_weight="0.91"
                android:layout_marginLeft="12dp"
                android:layout_marginStart="12dp"
                android:layout_alignBaseline="@+id/checkBox1"
                android:layout_alignBottom="@+id/checkBox1"
                android:layout_toRightOf="@+id/checkBox1"
                android:layout_toEndOf="@+id/checkBox1" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
